<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style3.css">
</head>
<body>
    <div class="container">
        <div class="card">
          <div class="profile-picture">
            <img src="https://images.unsplash.com/photo-1613323593608-abc90fec84ff?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Profile Picture">
          </div>
          <h2 class="name"><%= user.fullname %></h2>
          <h3 class="username">@<%= user.username %></h3>
          <p class="tagline">some tagline</p>
          <p class="description">some descriptions</p>
          <a href="#" class="button" style="margin-bottom: 10px;">Logout</a>
          <form action="/upload" method="post" enctype="multipart/form-data">
            <input type="text" name="filecaption" placeholder="some caption">
              <input type="file" name="file">
              <input type="submit">
          </form>
        </div>
    </div>
    <div class="container2">
      <div class="cards">
        <% if (user && user.posts && user.posts.length > 0) { %>
          <% user.posts.forEach((post) => { %>
            <div class="card">
              <img class="card-image" src="/images/uploads/<%= post.image %>" alt="Image">
              <div>
                <h4><%=post.postText %></h4>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <p>No posts available.</p>
        <% } %>
      </div>
    </div>
</body>
</html>